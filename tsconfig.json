{
    "compilerOptions": {
        "lib": ["es6", "dom", "es2017"],
        "outDir": "./lib",
        "allowJs": true,
        "target": "es5",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "resolveJsonModule": false,
        "sourceMap": true
    },
    "include": [
        "src/index.ts",
        "./src/**/*"
    ]
}